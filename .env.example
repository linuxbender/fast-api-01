# FastAPI Application Configuration
# All environments require HTTPS/TLS

# Environment
ENVIRONMENT=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true

# SSL/TLS Configuration (Required for all environments)
# For development: Self-signed certificates are auto-generated
# For production: Use certificates from CA (Let's Encrypt, etc.)
SSL_KEYFILE=./certs/private.key
SSL_CERTFILE=./certs/certificate.crt

# Database
DATABASE_URL=sqlite:///app.db

# Logging
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["https://localhost:3000", "https://localhost:8000", "https://127.0.0.1:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Email Configuration (Passwordless Login)
# Gmail: Use App Passwords (https://myaccount.google.com/apppasswords)
# For other providers, adjust MAIL_SERVER and MAIL_PORT accordingly
MAIL_FROM=noreply@example.com
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_STARTTLS=true
MAIL_SSL=false

# Login Code Configuration
LOGIN_CODE_EXPIRY_MINUTES=15

# JWT Configuration (Security)
# Use a strong secret key for production! Generate with: openssl rand -hex 32
# Example: e3f5k9m2p7q1w4r6t8u0v3x5y7z9a1b3c5d7e9f1a3b5c7d9e1f3a5b7c9d1e3
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
