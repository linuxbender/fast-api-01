# FastAPI Application Configuration
# All environments require HTTPS/TLS

# Environment
ENVIRONMENT=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=true

# SSL/TLS Configuration (Required for all environments)
# For development: Self-signed certificates are auto-generated
# For production: Use certificates from CA (Let's Encrypt, etc.)
SSL_KEYFILE=./certs/private.key
SSL_CERTFILE=./certs/certificate.crt

# Database
DATABASE_URL=sqlite:///app.db

# Logging
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["https://localhost:3000", "https://localhost:8000", "https://127.0.0.1:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]
